# OhmArchy Ghostty Terminal Configuration
# Integrates with OhmArchy theme system for consistent styling

# Import theme colors from current theme
config-file = ~/.config/ghostty/current-theme.conf

# Font configuration
font-family = "Hack Nerd Font"
font-size = 12

# Window settings
window-padding-x = 10
window-padding-y = 10
window-decoration = false
