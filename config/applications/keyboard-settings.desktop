[Desktop Entry]
Version=1.0
Type=Application
Name=Keyboard Settings
GenericName=Keyboard Configuration
Comment=Configure keyboard layout and input settings
Icon=input-keyboard
Exec=sh -c 'for e in "$VISUAL" "$EDITOR" gnome-text-editor xdg-open nvim micro nano vi; do [ -n "$e" ] || continue; $e ~/.config/hypr/hyprland.conf && notify-send "Keyboard Settings" "Edit the input{} section to configure keyboard/touchpad settings" && exit 0; done; notify-send "Keyboard Settings" "Could not open editor. Please edit ~/.config/hypr/hyprland.conf (input{} section)"'
Terminal=false
Categories=Settings;HardwareSettings;
Keywords=keyboard;input;layout;settings;configuration;hyprland;
StartupNotify=true
MimeType=text/plain;
